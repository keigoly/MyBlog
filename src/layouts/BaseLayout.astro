---
// src/layouts/BaseLayout.astro
import { ClientRouter } from "astro:transitions";
import ScrollManager from "../components/core/ScrollManager";
import CustomCursor from "../components/core/CustomCursor";
import Header from "../components/layout/Header";
import Footer from "../components/layout/Footer";
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
	showHeader?: boolean;
	showFooter?: boolean;
	fullWidth?: boolean;
}

const {
	title,
	description = "Creating Digital Experiences",
	showHeader = true,
	showFooter = true,
	fullWidth = false,
} = Astro.props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content={`${title} | KEIGOLY`} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<title>{title} | KEIGOLY</title>
		<ClientRouter />
	</head>
	<body
		class="min-h-screen flex flex-col relative bg-kg-bg text-kg-text cursor-none"
	>
		<ScrollManager client:only="react" />
		<CustomCursor client:only="react" />

		<!-- Noise Texture -->
		<div class="fixed inset-0 z-[-1] pointer-events-none bg-noise"></div>

		{showHeader && <Header client:load />}

		<main class={`flex-grow ${fullWidth ? "" : "max-w-7xl mx-auto px-6"}`}>
			<slot />
		</main>

		{showFooter && <Footer client:load />}
	</body>
</html>
