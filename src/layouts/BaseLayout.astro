---
// src/layouts/BaseLayout.astro
import { ClientRouter } from 'astro:transitions';
import ScrollManager from '../components/core/ScrollManager';
import CustomCursor from '../components/core/CustomCursor';
import Opening from '../components/core/Opening'; // ★追加
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Reading is a ritual." } = Astro.props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
    <head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | MONOLITH</title>
		<ClientRouter />
	</head>
	<body class="min-h-screen flex flex-col relative bg-monolith-bg text-monolith-text cursor-none">
        
        <Opening client:only="react" /> <ScrollManager client:only="react" />
        <CustomCursor client:only="react" />

        <div class="fixed inset-0 z-[-1] pointer-events-none opacity-20 bg-noise"></div>
        
		<main class="flex-grow w-full max-w-4xl mx-auto px-6 py-12 md:py-24">
			<slot />
		</main>

        <footer class="py-8 text-center text-xs text-monolith-sub font-display tracking-widest opacity-60">
            &copy; {new Date().getFullYear()} MONOLITH.
        </footer>
	</body>
</html>