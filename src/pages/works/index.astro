---
// src/pages/works/index.astro - Works Page (Skill Introduction)
import BaseLayout from "../../layouts/BaseLayout.astro";
import SectionTitle from "../../components/ui/SectionTitle";
import SkillSection from "../../components/ui/SkillSection";
---

<BaseLayout title="WORKS" description="業務内容・スキル紹介">
    <section class="pt-32 pb-16 md:pt-40 md:pb-24">
        <SectionTitle client:visible title="WORKS" />
    </section>

    <!-- Main Work Section -->
    <section class="pb-16 md:pb-20">
        <h2
            class="font-display text-xs tracking-[0.3em] text-kg-accent mb-8 flex items-center gap-4"
        >
            <span class="w-8 h-px bg-kg-accent"></span>
            MAIN WORK
        </h2>

        <SkillSection
            client:visible
            iconImage="/images/paloalto.png"
            category="SYSTEM ENGINEER"
            title="Palo Alto Networks"
            subtitle="5 Years Experience"
            description={[
                "Palo Alto Networksのシステムエンジニアとして、セキュリティソリューションの技術サポートを担当しています。",
                "顧客からの技術的な質問や疑問に対応し、重大な問題が発生した際にはトラブルシューティングを行います。特にメーカーとの技術連携・折衝を得意としており、複雑な問題の解決に貢献しています。",
            ]}
            skills={[
                "Palo Alto Networks",
                "Firewall",
                "Network Security",
                "Troubleshooting",
                "Technical Support",
                "Vendor Communication",
            ]}
        />
    </section>

    <!-- Divider -->
    <div class="flex items-center justify-center py-8">
        <div
            class="w-24 h-px bg-gradient-to-r from-transparent via-kg-border to-transparent"
        >
        </div>
    </div>

    <!-- Side Work Section -->
    <section class="pb-24 md:pb-32">
        <h2
            class="font-display text-xs tracking-[0.3em] text-kg-accent mb-8 flex items-center gap-4"
        >
            <span class="w-8 h-px bg-kg-accent"></span>
            SIDE WORK
        </h2>

        <SkillSection
            client:visible
            iconImage="/images/chrome.png"
            category="CHROME EXTENSION DEVELOPER"
            title="Extensions Published"
            description={[
                "副業としてChrome拡張機能の開発を行っています。ユーザーの生産性向上やブラウジング体験の改善を目的とした拡張機能を開発・公開しています。",
            ]}
            skills={[
                "TypeScript",
                "Chrome Extensions API",
                "React",
                "JavaScript",
                "Web Development",
            ]}
            link={{ text: "VIEW ALL APPS", href: "/apps" }}
            delay={0.2}
        />
    </section>
</BaseLayout>
