---
// src/pages/works/[slug].astro - Work Detail Page
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
    const works = await getCollection("works");
    return works.map((work) => ({
        params: { slug: work.slug },
        props: { work },
    }));
}

const { work } = Astro.props;
const { Content } = await work.render();
---

<BaseLayout title={work.data.title} description={work.data.description}>
    <article class="pt-32 pb-16 md:pt-40 md:pb-24">
        <!-- Header -->
        <header class="mb-12 md:mb-16">
            <div
                class="text-xs font-display tracking-[0.2em] text-kg-accent mb-4"
            >
                {work.data.category}
            </div>
            <h1
                class="font-display text-4xl md:text-5xl tracking-[0.2em] text-kg-text mb-6"
            >
                {work.data.title}
            </h1>
            <p class="text-kg-text-muted font-serif max-w-2xl">
                {work.data.description}
            </p>

            <!-- Meta -->
            <div
                class="flex flex-wrap gap-6 mt-8 pt-8 border-t border-kg-border"
            >
                <div>
                    <span
                        class="text-xs font-display tracking-widest text-kg-text-muted block mb-1"
                        >DATE</span
                    >
                    <span class="text-sm text-kg-text">
                        {
                            work.data.date.toLocaleDateString("en-US", {
                                year: "numeric",
                                month: "long",
                            })
                        }
                    </span>
                </div>

                {
                    work.data.technologies.length > 0 && (
                        <div>
                            <span class="text-xs font-display tracking-widest text-kg-text-muted block mb-1">
                                TECH
                            </span>
                            <span class="text-sm text-kg-text">
                                {work.data.technologies.join(", ")}
                            </span>
                        </div>
                    )
                }
            </div>

            <!-- Links -->
            <div class="flex gap-4 mt-6">
                {
                    work.data.github && (
                        <a
                            href={work.data.github}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 px-6 py-3 border border-kg-border text-kg-text-muted hover:border-kg-accent hover:text-kg-accent transition-colors duration-300 font-display text-xs tracking-widest"
                        >
                            GITHUB
                        </a>
                    )
                }
                {
                    work.data.demo && (
                        <a
                            href={work.data.demo}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 px-6 py-3 bg-kg-accent text-kg-bg hover:bg-kg-accent-hover transition-colors duration-300 font-display text-xs tracking-widest"
                        >
                            DEMO
                        </a>
                    )
                }
            </div>
        </header>

        <!-- Content -->
        <div
            class="prose prose-invert prose-lg max-w-none
      prose-headings:font-display prose-headings:tracking-widest prose-headings:text-kg-text
      prose-p:text-kg-text-muted prose-p:font-serif
      prose-a:text-kg-accent prose-a:no-underline hover:prose-a:underline
      prose-strong:text-kg-text
      prose-code:text-kg-accent prose-code:bg-kg-surface prose-code:px-1"
        >
            <Content />
        </div>

        <!-- Back Link -->
        <div class="mt-16 pt-8 border-t border-kg-border">
            <a
                href="/works"
                class="inline-flex items-center gap-2 font-display text-sm tracking-[0.2em] text-kg-text-muted hover:text-kg-accent transition-colors duration-300"
            >
                <span>‚Üê</span>
                BACK TO WORKS
            </a>
        </div>
    </article>
</BaseLayout>
