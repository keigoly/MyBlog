---
// src/pages/en/works/index.astro - Works Page (English)
import BaseLayout from "../../../layouts/BaseLayout.astro";
import SectionTitle from "../../../components/ui/SectionTitle";
import SkillSection from "../../../components/ui/SkillSection";
---

<BaseLayout
    title="WORKS"
    description="Skills & Professional Experience"
    lang="en"
>
    <section class="pt-32 pb-16 md:pt-40 md:pb-24">
        <SectionTitle client:visible title="WORKS" />
    </section>

    <!-- Main Work Section -->
    <section class="pb-16 md:pb-20">
        <h2
            class="font-display text-xs tracking-[0.3em] text-kg-accent mb-8 flex items-center gap-4"
        >
            <span class="w-8 h-px bg-kg-accent"></span>
            MAIN WORK
        </h2>

        <SkillSection
            client:visible
            iconImage="/images/paloalto.png"
            category="SYSTEM ENGINEER"
            title="Palo Alto Networks"
            subtitle="5 Years Experience"
            description={[
                "As a System Engineer at Palo Alto Networks, I provide technical support for security solutions.",
                "I handle technical inquiries from customers and perform troubleshooting when critical issues arise. I specialize in technical collaboration and negotiation with vendors, contributing to the resolution of complex problems.",
            ]}
            skills={[
                "Palo Alto Networks",
                "Firewall",
                "Network Security",
                "Troubleshooting",
                "Technical Support",
                "Vendor Communication",
            ]}
        />
    </section>

    <!-- Divider -->
    <div class="flex items-center justify-center py-8">
        <div
            class="w-24 h-px bg-gradient-to-r from-transparent via-kg-border to-transparent"
        >
        </div>
    </div>

    <!-- Side Work Section -->
    <section class="pb-24 md:pb-32">
        <h2
            class="font-display text-xs tracking-[0.3em] text-kg-accent mb-8 flex items-center gap-4"
        >
            <span class="w-8 h-px bg-kg-accent"></span>
            SIDE WORK
        </h2>

        <SkillSection
            client:visible
            iconImage="/images/chrome.png"
            category="CHROME EXTENSION DEVELOPER"
            title="Extensions Published"
            description={[
                "I develop Chrome extensions as a side project. I create and publish extensions aimed at improving user productivity and enhancing the browsing experience.",
            ]}
            skills={[
                "TypeScript",
                "Chrome Extensions API",
                "React",
                "JavaScript",
                "Web Development",
            ]}
            link={{ text: "VIEW ALL APPS", href: "/en/apps" }}
            delay={0.2}
        />
    </section>
</BaseLayout>
