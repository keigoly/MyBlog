---
// src/pages/about.astro - About Page
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionTitle from "../components/ui/SectionTitle";
---

<BaseLayout title="ABOUT" description="KEIGOLYについて">
    <section class="pt-32 pb-16 md:pt-40 md:pb-24">
        <SectionTitle client:visible title="ABOUT" subtitle="Who I Am" />
    </section>

    <!-- Profile Section -->
    <section class="py-16 md:py-24">
        <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center"
        >
            <!-- Image -->
            <div
                class="relative aspect-square bg-kg-surface border border-kg-border rounded-sm overflow-hidden"
            >
                <div class="absolute inset-0 flex items-center justify-center">
                    <span class="font-display text-8xl text-kg-border">K</span>
                </div>
                <!-- Decorative Elements -->
                <div
                    class="absolute top-4 left-4 w-8 h-8 border-l border-t border-kg-accent/50"
                >
                </div>
                <div
                    class="absolute bottom-4 right-4 w-8 h-8 border-r border-b border-kg-accent/50"
                >
                </div>
            </div>

            <!-- Bio -->
            <div class="space-y-6">
                <h2 class="font-display text-3xl tracking-[0.2em] text-kg-text">
                    KEIGOLY
                </h2>
                <p class="text-kg-text-muted font-serif leading-relaxed">
                    デジタル体験を創造するクリエイター。ブラウザ拡張機能やWebアプリケーションの開発を行っています。
                </p>
                <p class="text-kg-text-muted font-serif leading-relaxed">
                    技術とデザインの融合を追求し、ユーザーに新しい価値を提供することを目指しています。
                </p>

                <!-- Divider -->
                <div class="w-16 h-px bg-kg-accent/50"></div>

                <!-- Skills -->
                <div>
                    <h3
                        class="font-display text-sm tracking-[0.2em] text-kg-accent mb-4"
                    >
                        SKILLS
                    </h3>
                    <div class="flex flex-wrap gap-3">
                        {
                            [
                                "TypeScript",
                                "React",
                                "Astro",
                                "Chrome Extensions",
                                "Node.js",
                                "Design",
                            ].map((skill) => (
                                <span class="px-4 py-2 text-xs font-display tracking-widest text-kg-text-muted border border-kg-border hover:border-kg-accent transition-colors duration-300">
                                    {skill}
                                </span>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-16 md:py-24 border-t border-kg-border">
        <h2
            class="font-display text-2xl tracking-[0.2em] text-kg-text mb-12 text-center"
        >
            TIMELINE
        </h2>

        <div class="max-w-2xl mx-auto space-y-12">
            <div class="relative pl-8 border-l border-kg-border">
                <div
                    class="absolute left-0 top-0 w-2 h-2 -translate-x-1/2 bg-kg-accent rounded-full"
                >
                </div>
                <div
                    class="text-xs font-display tracking-widest text-kg-accent mb-2"
                >
                    2024
                </div>
                <h3 class="font-serif text-lg text-kg-text mb-2">
                    オフィシャルサイト開設
                </h3>
                <p class="text-sm text-kg-text-muted">
                    KEIGOLYオフィシャルサイトをリニューアル公開
                </p>
            </div>

            <div class="relative pl-8 border-l border-kg-border">
                <div
                    class="absolute left-0 top-0 w-2 h-2 -translate-x-1/2 bg-kg-border rounded-full"
                >
                </div>
                <div
                    class="text-xs font-display tracking-widest text-kg-text-muted mb-2"
                >
                    Coming Soon
                </div>
                <h3 class="font-serif text-lg text-kg-text mb-2">今後の活動</h3>
                <p class="text-sm text-kg-text-muted">
                    新しいプロジェクトを準備中
                </p>
            </div>
        </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-16 md:py-24 text-center border-t border-kg-border">
        <p class="text-kg-text-muted font-serif mb-6">
            お仕事のご依頼・ご相談はこちら
        </p>
        <a
            href="/contact"
            class="inline-block px-10 py-4 border border-kg-accent text-kg-accent font-display text-sm tracking-[0.2em] hover:bg-kg-accent hover:text-kg-bg transition-all duration-300"
        >
            CONTACT
        </a>
    </section>
</BaseLayout>
