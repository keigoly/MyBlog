---
// src/pages/about.astro - About Page
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionTitle from "../components/ui/SectionTitle";
import { getCollection } from "astro:content";

// ブログ記事を取得して日付順にソート（今日以降の記事のみ）
const blogPosts = await getCollection("blog");
const today = new Date("2026-01-10"); // サイト開設日
const sortedPosts = blogPosts
    .filter((post) => new Date(post.data.pubDate) > today)
    .sort(
        (a, b) =>
            new Date(b.data.pubDate).getTime() -
            new Date(a.data.pubDate).getTime(),
    )
    .slice(0, 5); // 最新5件を表示
---

<BaseLayout title="ABOUT" description="KEIGOLYについて">
    <section class="pt-32 pb-16 md:pt-40 md:pb-24">
        <SectionTitle client:visible title="ABOUT" />
    </section>

    <!-- Profile Section -->
    <section class="py-16 md:py-24">
        <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center"
        >
            <!-- Image -->
            <div
                class="relative aspect-square bg-kg-surface border border-kg-border rounded-sm overflow-hidden"
            >
                <img
                    src="/images/about-profile.jpg"
                    alt="KEIGOLY Profile"
                    class="w-full h-full object-cover"
                />
                <!-- Decorative Elements -->
                <div
                    class="absolute top-4 left-4 w-8 h-8 border-l border-t border-kg-accent/50"
                >
                </div>
                <div
                    class="absolute bottom-4 right-4 w-8 h-8 border-r border-b border-kg-accent/50"
                >
                </div>
            </div>

            <!-- Bio -->
            <div class="space-y-6">
                <h2 class="font-display text-3xl tracking-[0.2em] text-kg-text">
                    KEIGOLY
                </h2>
                <p class="text-kg-text-muted font-serif leading-relaxed">
                    デジタル体験を創造するクリエイター。<br />
                    メインの仕事はPaloAltoのシステムエンジニアの業務を、<br />
                    サブでブラウザ拡張機能やWebアプリケーションの開発を行っています。
                </p>
                <p class="text-kg-text-muted font-serif leading-relaxed">
                    技術とデザインの融合を追求し、<br />
                    ユーザーに新しい価値を提供することを目指しています。
                </p>
                <p class="text-kg-text-muted font-serif leading-relaxed">
                    過去の実績等については以下のリンクからご確認ください。
                </p>

                <!-- Divider -->
                <div class="w-16 h-px bg-kg-accent/50"></div>

                <!-- GitHub Link -->
                <div>
                    <a
                        href="https://github.com/keigoly"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-3 px-6 py-3 border border-kg-border text-kg-text-muted hover:border-kg-accent hover:text-kg-accent transition-colors duration-300"
                    >
                        <svg
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                        <span class="font-display text-sm tracking-[0.15em]"
                            >GitHub</span
                        >
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-16 md:py-24 border-t border-kg-border">
        <h2
            class="font-display text-2xl tracking-[0.2em] text-kg-text mb-12 text-center"
        >
            TIMELINE
        </h2>

        <div class="max-w-2xl mx-auto space-y-8">
            <!-- ブログ記事を動的に表示（新しい順で上に） -->
            {
                sortedPosts.map((post) => {
                    const date = new Date(post.data.pubDate);
                    const year = date.getFullYear();
                    const monthDay = `${date.getMonth() + 1}/${date.getDate()}`;
                    return (
                        <div class="relative pl-8 border-l border-kg-border">
                            <div class="absolute left-0 top-0 w-2 h-2 -translate-x-1/2 bg-kg-accent rounded-full" />
                            <div class="text-xs font-display tracking-widest text-kg-accent mb-2">
                                {year}.{monthDay}
                            </div>
                            <a href={`/blog/${post.slug}`} class="group">
                                <h3 class="font-serif text-lg text-kg-text group-hover:text-kg-accent transition-colors">
                                    {post.data.title}
                                </h3>
                            </a>
                        </div>
                    );
                })
            }

            <!-- オフィシャルサイト開設（一番下に固定） -->
            <div class="relative pl-8 border-l border-kg-border">
                <div
                    class="absolute left-0 top-0 w-2 h-2 -translate-x-1/2 bg-kg-border rounded-full"
                >
                </div>
                <div
                    class="text-xs font-display tracking-widest text-kg-text-muted mb-2"
                >
                    2026
                </div>
                <h3 class="font-serif text-lg text-kg-text">
                    オフィシャルサイト開設
                </h3>
            </div>
        </div>
    </section>

    <!-- Contact CTA -->
    <section class="py-16 md:py-24 text-center border-t border-kg-border">
        <p class="text-kg-text-muted font-serif mb-6">
            お仕事のご依頼・ご相談はこちら
        </p>
        <a
            href="/contact"
            class="inline-block px-10 py-4 border border-kg-accent text-kg-accent font-display text-sm tracking-[0.2em] hover:bg-kg-accent hover:text-kg-bg transition-all duration-300"
        >
            CONTACT
        </a>
    </section>
</BaseLayout>
